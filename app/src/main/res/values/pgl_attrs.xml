<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="CircleImageView">
        <attr name="android:src" />
        <attr name="civ_circle" format="boolean" />
        <attr name="civ_cornerRadius" format="reference|dimension" />
        <attr name="civ_square" format="boolean" />
        <attr name="civ_borderWidth" format="reference|dimension" />
        <attr name="civ_borderColor" format="reference|color" />
    </declare-styleable>
    <declare-styleable name="PhotoGridLayout">
        <attr name="pgl_plusEnable" format="boolean" />
        <attr name="pgl_deleteDrawable" format="reference" />
        <attr name="pgl_maxItemCount" format="integer" />
